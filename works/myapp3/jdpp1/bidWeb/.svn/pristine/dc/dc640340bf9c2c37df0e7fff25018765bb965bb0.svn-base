<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="filePath" value="/data/logs/tomcat/bid_bidWeb.log" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS}|[%X{LOG_ID}]|%p|%C.%M\(%L\):%m%n</pattern>
        </encoder>
    </appender>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${filePath}</File>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS}|[%X{LOG_ID}]|%t|%p|%C.%M\(%L\):%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${filePath}.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
    </appender>

    <logger name="com.eachnet" level="INFO">
        <appender-ref ref="file"/>
    </logger>
    <logger name="com.eachnet" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
